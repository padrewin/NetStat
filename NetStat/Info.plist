    <string>We need your location to detect your current Wi-Fi network.</string>

    <!-- Configurat automat de Xcode -->
    <key>CFBundleIdentifier</key>
    <string>dev.padrewin.NetStat</string>

    <!-- Versiunea aplicației -->
    <key>CFBundleShortVersionString</key>
    <string>1.0</string>

    <!-- Build number -->
    <key>CFBundleVersion</key>
    <string>1</string>

    <!-- Principal class -->
    <key>NSPrincipalClass</key>
    <string>NSApplication</string>

    <!-- Icona aplicației (opțional) -->
